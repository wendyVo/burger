<div class="container my-3">
<img src="/assets/img/burger_sandwich.png" />
<h1>Eat-Da-Burger!</h1>
<div class="container">
  <div class="row">
  <div class="col-6 orderBurger">
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-6 devouredBurger">
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
  </div>
</div>

<h2>Add a Burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="bur">Enter a burger Name:</label>
    <input type="text" id="bur" name="burger-name">
  </div>
  <button type="submit">Add Burger</button>
</form>

</div>